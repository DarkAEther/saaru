{% extends "base.jinja" %}

{% block main_template_content %}
<h1> Saaru Documentation </h1>
{{postcontent | safe}}
<hr>

<h4> Quick Links </h4>
{% for collection in base.collections %}
<p> Collection: {{collection}} </p>
{% for post in base.collections[collection] %}
<p>&emsp; <a href="{{post.link}}"> {{post.frontmatter.title}}</a> &rarr; {{post.frontmatter.description}}</p>
{% endfor %}
{% endfor %}

Tags: {% for tag in frontmatter.tags %}
<a class="tag" href="/tags/{{tag}}">{{tag}}</a>
{% endfor %}
{% endblock %}
